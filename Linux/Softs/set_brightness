# Bright
xrandr --output VGA-0  --gamma 1:1:.6 --brightness 1
xrandr --output LVDS-0 --gamma 1:1:.6 --brightness 1

# Medium
xrandr --output VGA-0  --gamma .7:.7:.42 --brightness .7
xrandr --output LVDS-0 --gamma .7:.7:.42 --brightness .7

# Dark
xrandr --output VGA-0  --gamma .5:.5:.3 --brightness .5
xrandr --output LVDS-0 --gamma .5:.5:.3 --brightness .5