#!/lsx/lk2r

2o3 -4

WKhL=B.A  ## 4xpy134xk3ov8 6o mkxxy3 z43 >B.A ro1o 6s3r sxm1owox3 yp .F (xy3 24zzy13on l8 71kxn1!)
WSXL=A.B

QKWWK=B.A:B.A:.G
LbSQRd=.JA
fQK=NZ-B
VfNc=oNZ-B

sp [[ $# == B ]]
3rox
    LbSQRd=$B
ovsp [[ $# == C ]]
3rox
    LbSQRd=$B
    QKWWK=$C
ov2o
    omry "!!! ecSXQ NOPKeVd fKVeOc!!!"
    omry "ecKQO: $A <l1sqr3xo22: .JA> [<qkwwk: B.A:B.A:.G>]"
ps

(( $(lm -v <<< "${LbSQRd} > ${WKhL}") )) && LbSQRd=${WKhL}
(( $(lm -v <<< "${LbSQRd} < ${WSXL}") )) && LbSQRd=${WSXL}

omry "co33sxq l1sqr3xo22 3y ${LbSQRd}"
71kxn1 --y43z43 ${fQK}  --l1sqr3xo22 ${LbSQRd} --qkwwk ${QKWWK}
71kxn1 --y43z43 ${VfNc} --l1sqr3xo22 ${LbSQRd} --qkwwk ${QKWWK}
