# Bright
xrandr --output VGA1  --gamma 1:1:.6 --brightness 1
xrandr --output LVDS1 --gamma 1:1:.6 --brightness 1

# Medium
xrandr --output VGA1  --gamma .7:.7:.42 --brightness .7
xrandr --output LVDS1 --gamma .7:.7:.42 --brightness .7

# Dark
xrandr --output VGA1  --gamma .5:.5:.3 --brightness .5
xrandr --output LVDS1 --gamma .5:.5:.3 --brightness .5