shell -${SHELL}
term xterm-256color
#caption always "%n(%t) : %C"
defscrollback 3000
startup_message off
hardstatus on
vbell off

### Home
##bind "\e[OH" meta
### End
##bind "\e[OF" ^e

# C-a n => move to next region
bind n focus next
# C-a p => move to previous region
bind p focus prev
### Ctrl-Tab
##bindkey "[27;5;9~" focus next
#### Ctrl-Shift-Tab
##bindkey "[27;6;9~" focus prev

# C-a l => saves the layout
bind l layout save default
### C-a C-l => saves the layout
##bind ^l layout save default

# C-a h => copies the whole scrollback buffer!
bind h hardcopy -h
### C-a C-h => copies the whole scrollback buffer!
##bind ^h hardcopy -h

# C-a x => Replace screen-locking by remove-region
bind x remove
### C-a C-x => Replace screen-locking by remove-region
##bind ^x remove

# C-a + => Enlarges current panel/region
bind + resize +4
# C-a - => Shrinks current panel/region
bind - resize -4
