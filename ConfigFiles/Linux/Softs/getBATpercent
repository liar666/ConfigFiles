#!/bin/bash
if [[ $# != 0 ]]
then 
    echo "USAGE: takes no args"
else
##    retVal=$(echo "`cat /sys/class/power_supply/BAT0/charge_now`/`cat /sys/class/power_supply/BAT0/charge_full`" | bc -l)
    retVal=$(echo "`cat /sys/class/power_supply/BAT0/charge_now`/`cat /sys/class/power_supply/BAT0/charge_full_design`" | bc -l)

    if [[ "$retVal"x != ""x ]] ; then
	echo $retVal
    else
	echo "0.0" # Just in case next command does return nothing, prevents awesome freeze
    fi
fi